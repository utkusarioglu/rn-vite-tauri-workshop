{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [],
      "dotEnv": ["src/targets/spa/.env.local"]
    },
    "spa#build": {
      "env": ["NODE_ENV", "HOSTNAME", "ENABLE_TELEMETRY"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:no-telemetry": {
      "cache": false,
      "persistent": true
    },
    "upgrade-all": {
      "cache": false,
      "persistent": false
    }
  }
}
